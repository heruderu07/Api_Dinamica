{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "jest.config.ts",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}